<?xml version="1.0"?>
<robot name="leg3dof">

  <!-- ===================== -->
  <!-- Optional: Gazebo plugin -->
  <!-- ===================== -->
  <!-- Can be added later when adding controllers -->
  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <robot_param>robot_description</robot_param>
    </plugin>
  </gazebo>

  <!-- ===================== -->
  <!-- Base Link (Hip) -->
  <!-- ===================== -->
  <link name="hip_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia
        ixx="0.01" iyy="0.01" izz="0.01"
        ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- ===================== -->
  <!-- Thigh Link -->
  <!-- ===================== -->
  <link name="thigh_link">
    <inertial>
      <origin xyz="0 0 -0.2"/>
      <mass value="1.0"/>
      <inertia
        ixx="0.01" iyy="0.01" izz="0.01"
        ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 -0.2"/>
      <geometry>
        <cylinder length="0.4" radius="0.03"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.2"/>
      <geometry>
        <cylinder length="0.4" radius="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- ===================== -->
  <!-- Shank / Foot Link -->
  <!-- ===================== -->
  <link name="foot_link">
    <inertial>
      <origin xyz="0 0 -0.2"/>
      <mass value="0.5"/>
      <inertia
        ixx="0.005" iyy="0.005" izz="0.005"
        ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>

    <visual>
      <origin xyz="0 0 -0.2"/>
      <geometry>
        <cylinder length="0.4" radius="0.025"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.2"/>
      <geometry>
        <cylinder length="0.4" radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <!-- ===================== -->
  <!-- Hip Pitch Joint -->
  <!-- ===================== -->
  <joint name="hip_pitch_joint" type="revolute">
    <parent link="hip_link"/>
    <child link="thigh_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="30" velocity="3"/>
  </joint>

  <!-- ===================== -->
  <!-- Hip Roll Joint -->
  <!-- ===================== -->
  <joint name="hip_roll_joint" type="revolute">
    <parent link="thigh_link"/>
    <child link="foot_link"/>
    <origin xyz="0 0 -0.4" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="30" velocity="3"/>
  </joint>


</robot>

